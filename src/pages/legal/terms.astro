<style>
    .legal-page {
        padding-top: 140px;
        padding-bottom: 4rem;
        min-height: 80vh;
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
    }

    .last-updated {
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 3rem;
    }

    .legal-content {
        background: var(--color-surface);
        padding: 3rem;
        border-radius: var(--radius-lg);
        border: 1px solid rgba(255, 255, 255, 0.05);
        max-width: 900px;
    }

    section {
        margin-bottom: 2.5rem;
    }

    h2 {
        color: var(--color-accent);
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    p {
        line-height: 1.8;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 1rem;
    }

    a {
        color: white;
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .legal-content {
            padding: 1.5rem;
        }

        h1 {
            font-size: 2rem;
        }
    }
</style>
