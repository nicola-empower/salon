---
import Layout from "../../layouts/Layout.astro";
import { MOCK_BOOKINGS } from "../../data/staff-data";
import "../../styles/calendar.css";

// Get unpaid bookings
const unpaidBookings = MOCK_BOOKINGS.filter(
    (b) => b.paymentStatus === "unpaid" || b.paymentStatus === "deposit",
);
---

<Layout title="Payment Processing">
    <main class="page-content">
        <section class="section">
            <div class="container">
                <div style="margin-bottom: 2rem;">
                    <a
                        href="/receptionist/dashboard"
                        style="color: rgba(255, 255, 255, 0.6); text-decoration: none;"
                    >
                        ‚Üê Back to Dashboard
                    </a>
                </div>

                <h1 style="margin-bottom: 2rem;">Payment Processing</h1>

                <!-- Payment Form -->
                <div
                    style="display: grid; grid-template-columns: 1fr 400px; gap: 2rem;"
                >
                    <!-- Unpaid Bookings -->
                    <div>
                        <h2 style="margin-bottom: 1.5rem;">Pending Payments</h2>

                        <div class="payment-list">
                            {
                                unpaidBookings.map((booking) => {
                                    const hasDeposit =
                                        booking.paymentStatus === "deposit";
                                    const depositAmount = hasDeposit
                                        ? Math.round(booking.price * 0.3)
                                        : 0;
                                    const amountDue =
                                        booking.price - depositAmount;

                                    return (
                                        <div class="payment-item">
                                            <div class="payment-info">
                                                <div class="payment-client">
                                                    {booking.clientName}
                                                </div>
                                                <div class="payment-treatment">
                                                    {booking.treatmentName}
                                                </div>
                                                <div class="payment-meta">
                                                    {booking.staffName} ‚Ä¢{" "}
                                                    {new Date(
                                                        booking.date,
                                                    ).toLocaleDateString(
                                                        "en-GB",
                                                    )}{" "}
                                                    {booking.time}
                                                </div>
                                            </div>
                                            <div class="payment-amount">
                                                <div class="amount-label">
                                                    {hasDeposit
                                                        ? "Remaining Due"
                                                        : "Amount Due"}
                                                </div>
                                                <div class="amount-value">
                                                    ¬£{amountDue}
                                                </div>
                                                {hasDeposit && (
                                                    <div class="amount-note">
                                                        Total: ¬£{booking.price}{" "}
                                                        <br />
                                                        (Paid Deposit: ¬£
                                                        {depositAmount})
                                                    </div>
                                                )}
                                            </div>
                                            <button
                                                class="btn btn-primary"
                                                onclick={`selectBooking('${booking.id}', '${booking.clientName}', ${amountDue}, ${depositAmount}, '${booking.staffId}')`}
                                            >
                                                Process Payment
                                            </button>
                                        </div>
                                    );
                                })
                            }

                            {
                                unpaidBookings.length === 0 && (
                                    <div style="text-align: center; padding: 3rem; color: rgba(255, 255, 255, 0.6);">
                                        All payments up to date! üéâ
                                    </div>
                                )
                            }
                        </div>
                    </div>

                    <!-- Payment Terminal -->
                    <div class="payment-terminal">
                        <h3 style="margin-bottom: 1.5rem;">Payment Terminal</h3>

                        <div id="paymentForm" style="display: none;">
                            <div class="terminal-display">
                                <div
                                    class="terminal-client"
                                    id="terminalClient"
                                >
                                    -
                                </div>

                                <div
                                    style="display: flex; justify-content: space-between; font-size: 0.9rem; color: rgba(255,255,255,0.7); margin-bottom: 0.5rem;"
                                >
                                    <span>Service Balance:</span>
                                    <span id="displayService">¬£0.00</span>
                                </div>
                                <div
                                    style="display: flex; justify-content: space-between; font-size: 0.9rem; color: #4ade80; margin-bottom: 1rem;"
                                >
                                    <span>+ Tip:</span>
                                    <span id="displayTip">¬£0.00</span>
                                </div>
                                <div
                                    style="border-top: 1px solid rgba(255,255,255,0.1); margin-bottom: 0.5rem;"
                                >
                                </div>

                                <div class="terminal-amount" id="terminalTotal">
                                    ¬£0.00
                                </div>
                                <div
                                    style="font-size: 0.75rem; color: rgba(255,255,255,0.4); margin-top: 0.25rem;"
                                >
                                    TOTAL TO CHARGE
                                </div>
                            </div>

                            <div
                                class="form-group"
                                style="margin-bottom: 1.5rem;"
                            >
                                <label
                                    style="display: block; margin-bottom: 0.5rem; color: #ccc;"
                                    >Add Gratuity / Tip (¬£)</label
                                >
                                <input
                                    type="number"
                                    id="inputTip"
                                    class="input-field"
                                    placeholder="0.00"
                                    min="0"
                                    step="0.50"
                                    onchange="updateTotal()"
                                    onkeyup="updateTotal()"
                                    style="width: 100%; padding: 0.8rem; background: rgba(0,0,0,0.3); border: 1px solid rgba(255,255,255,0.1); color: white; border-radius: 6px; font-size: 1.1rem;"
                                />
                                <div
                                    style="display: flex; gap: 0.5rem; margin-top: 0.5rem;"
                                >
                                    <button class="btn-xs" onclick="setTip(0)"
                                        >No Tip</button
                                    >
                                    <button class="btn-xs" onclick="setTip(5)"
                                        >¬£5</button
                                    >
                                    <button class="btn-xs" onclick="setTip(10)"
                                        >¬£10</button
                                    >
                                    <button
                                        class="btn-xs"
                                        onclick="setTipPct(0.1)">10%</button
                                    >
                                </div>
                            </div>

                            <div
                                class="payment-method-selector grid-2"
                                style="grid-template-columns: repeat(2, 1fr);"
                            >
                                <button
                                    class="payment-method-btn active"
                                    data-method="card"
                                >
                                    <span style="font-size: 1.2rem;"
                                        >üí≥ Card</span
                                    >
                                </button>
                                <button
                                    class="payment-method-btn"
                                    data-method="cash"
                                >
                                    <span style="font-size: 1.2rem;"
                                        >üí∑ Cash</span
                                    >
                                </button>
                                <button
                                    class="payment-method-btn"
                                    data-method="transfer"
                                >
                                    <span style="font-size: 1.2rem;"
                                        >üè¶ Transfer</span
                                    >
                                </button>
                                <button
                                    class="payment-method-btn"
                                    data-method="account"
                                >
                                    <span style="font-size: 1.2rem;"
                                        >üìã Account</span
                                    >
                                </button>
                            </div>

                            <button
                                class="btn btn-primary"
                                style="width: 100%; margin-top: 1.5rem;"
                                onclick="processPayment()"
                            >
                                Complete Payment
                            </button>
                        </div>

                        <div
                            id="paymentSuccess"
                            style="display: none; text-align: center; padding: 2rem;"
                        >
                            <div style="font-size: 4rem; margin-bottom: 1rem;">
                                ‚úì
                            </div>
                            <h3 style="color: #4CAF50;">Payment Successful!</h3>
                            <div
                                id="receiptDetails"
                                style="background: rgba(255,255,255,0.05); padding: 1rem; border-radius: 8px; margin: 1rem 0; text-align: left; font-size: 0.9rem;"
                            >
                                <!-- Receipt details injected here -->
                            </div>
                            <div
                                style="display: flex; gap: 1rem; justify-content: center;"
                            >
                                <button
                                    class="btn btn-primary"
                                    onclick="alert('Rebooking interface would open here with pre-filled details.')"
                                >
                                    üìÖ Book Next
                                </button>
                                <button
                                    class="btn btn-outline"
                                    onclick="resetTerminal()"
                                >
                                    Next Client
                                </button>
                            </div>
                        </div>

                        <div
                            id="paymentIdle"
                            style="text-align: center; padding: 3rem; color: rgba(255, 255, 255, 0.5);"
                        >
                            Select a booking to process payment
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script is:inline>
        let currentBooking = null;
        let currentServiceAmount = 0;

        function selectBooking(
            id,
            clientName,
            amountDue,
            depositPaid,
            staffId,
        ) {
            currentBooking = {
                id,
                clientName,
                amountDue,
                depositPaid,
                staffId,
            };
            currentServiceAmount = amountDue;

            // Reset UI
            document.getElementById("paymentIdle").style.display = "none";
            document.getElementById("paymentSuccess").style.display = "none";
            document.getElementById("paymentForm").style.display = "block";

            // Set Data
            document.getElementById("terminalClient").textContent = clientName;
            document.getElementById("inputTip").value = "";

            updateTotal();
        }

        function setTip(amount) {
            document.getElementById("inputTip").value = amount;
            updateTotal();
        }

        function setTipPct(pct) {
            const tip = (currentServiceAmount * pct).toFixed(2);
            document.getElementById("inputTip").value = tip;
            updateTotal();
        }

        function updateTotal() {
            const tipInput = document.getElementById("inputTip").value;
            const tip = parseFloat(tipInput) || 0;
            const total = currentServiceAmount + tip;

            document.getElementById("displayService").textContent =
                `¬£${currentServiceAmount.toFixed(2)}`;
            document.getElementById("displayTip").textContent =
                `¬£${tip.toFixed(2)}`;
            document.getElementById("terminalTotal").textContent =
                `¬£${total.toFixed(2)}`;
        }

        function processPayment() {
            if (!currentBooking) return;

            const tipInput = document.getElementById("inputTip").value;
            const tip = parseFloat(tipInput) || 0;
            const total = currentServiceAmount + tip;
            const method = document
                .querySelector(".payment-method-btn.active")
                .getAttribute("data-method")
                .toUpperCase();

            // ACTUAL SYNC
            // Get existing or init
            const storeKey = "salon_transactions";
            const existing = localStorage.getItem(storeKey);
            const transactions = existing ? JSON.parse(existing) : [];

            // Add new
            // We need staffId from booking to attribute tips!
            // In the real app booking would have staffId, here we will simulate or grab if available.
            // Looking at the template, we didn't pass staffId to selectBooking.
            // We should pass it. But for now let's hack it or find it.
            // Actually, let's pass it properly in the next step. For now assume generic.

            // Wait, I can pass it in selectBooking call in key areas.

            transactions.push({
                id: `txn-${Date.now()}`,
                amount: currentServiceAmount,
                tip: tip,
                staffId: currentBooking.staffId || "staff-1", // Fallback or needs update
                method: method,
                timestamp: Date.now(),
            });

            localStorage.setItem(storeKey, JSON.stringify(transactions));
            window.dispatchEvent(new Event("transaction-updated"));

            document.getElementById("paymentForm").style.display = "none";
            document.getElementById("paymentSuccess").style.display = "block";

            // Show Receipt
            const receiptHtml = `
                <div style="display: flex; justify-content: space-between; margin-bottom: 0.25rem;">
                    <span>Method:</span> <strong>${method}</strong>
                </div>
                <div style="display: flex; justify-content: space-between; margin-bottom: 0.25rem;">
                    <span>Service:</span> <span>¬£${currentServiceAmount.toFixed(2)}</span>
                </div>
                <div style="display: flex; justify-content: space-between; margin-bottom: 0.25rem; color: #4ade80;">
                    <span>Tip (To Staff):</span> <span>¬£${tip.toFixed(2)}</span>
                </div>
                <div style="border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0;"></div>
                <div style="display: flex; justify-content: space-between; font-weight: bold;">
                    <span>TOTAL PAID:</span> <span>¬£${total.toFixed(2)}</span>
                </div>
            `;
            document.getElementById("receiptDetails").innerHTML = receiptHtml;
        }

        function resetTerminal() {
            currentBooking = null;
            document.getElementById("paymentSuccess").style.display = "none";
            document.getElementById("paymentIdle").style.display = "block";
        }

        // Methods
        document.querySelectorAll(".payment-method-btn").forEach((btn) => {
            btn.addEventListener("click", function () {
                document
                    .querySelectorAll(".payment-method-btn")
                    .forEach((b) => b.classList.remove("active"));
                this.classList.add("active");
            });
        });
    </script>
</Layout>

<style>
    .payment-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .payment-item {
        background: var(--color-surface);
        padding: 1.5rem;
        border-radius: var(--radius-lg);
        border: 1px solid rgba(255, 255, 255, 0.05);
        display: grid;
        grid-template-columns: 1fr auto auto;
        gap: 1.5rem;
        align-items: center;
    }

    .payment-client {
        font-weight: 700;
        font-size: 1.125rem;
        margin-bottom: 0.25rem;
    }

    .payment-treatment {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 0.5rem;
    }

    .payment-meta {
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .payment-amount {
        text-align: right;
    }

    .amount-label {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .amount-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-accent);
    }

    .amount-note {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.6);
        margin-top: 0.25rem;
    }

    .payment-terminal {
        background: var(--color-surface);
        padding: 2rem;
        border-radius: var(--radius-lg);
        border: 1px solid rgba(255, 255, 255, 0.05);
        position: sticky;
        top: 2rem;
    }

    .terminal-display {
        background: rgba(0, 0, 0, 0.3);
        padding: 1.5rem;
        border-radius: var(--radius-md);
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .terminal-client {
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 0.5rem;
    }

    .terminal-amount {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--color-accent);
    }

    .payment-method-selector {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .payment-method-btn {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: var(--radius-md);
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.875rem;
    }

    .payment-method-btn:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .payment-method-btn.active {
        background: rgba(212, 175, 55, 0.2);
        border-color: var(--color-accent);
        color: var(--color-accent);
    }

    .card-simulator {
        background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
        padding: 1.5rem;
        border-radius: var(--radius-md);
    }

    .card-display {
        background: linear-gradient(135deg, var(--color-accent), #c9a143);
        padding: 1.5rem;
        border-radius: var(--radius-md);
        margin-bottom: 1rem;
        color: var(--color-bg);
    }

    .card-chip {
        width: 40px;
        height: 30px;
        background: #d4af37;
        border-radius: 4px;
        margin-bottom: 1.5rem;
    }

    .card-number {
        font-family: "Courier New", monospace;
        font-size: 1.125rem;
        letter-spacing: 0.1em;
        margin-bottom: 0.5rem;
    }

    .card-name {
        font-size: 0.875rem;
        opacity: 0.8;
    }

    .card-instructions {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        font-size: 0.875rem;
    }

    @media (max-width: 1024px) {
        .payment-item {
            grid-template-columns: 1fr;
        }

        .payment-terminal {
            position: static;
        }
    }
</style>
