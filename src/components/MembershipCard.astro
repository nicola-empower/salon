---
import type { MembershipTier } from "../data/membership-data";

interface Props {
    tier: MembershipTier;
}

const { tier } = Astro.props;

// Determine gradient based on tier color
const getGradient = (color: string) => {
    return `linear-gradient(135deg, ${color}22 0%, ${color}05 100%)`;
};

const getBorder = (color: string) => {
    return `1px solid ${color}44`;
};
---

<div class="membership-card" data-tier={tier.id}>
    {tier.popular && <div class="popular-badge">Most Popular</div>}

    <div class="card-header">
        <h3 class="tier-name" style={`color: ${tier.color}`}>{tier.name}</h3>
        <div class="price-container">
            <span class="currency">£</span>
            <span class="amount">{tier.price}</span>
            <span class="period">/{tier.billingPeriod}</span>
        </div>
        <p class="description">{tier.description}</p>
    </div>

    <div class="card-body">
        <ul class="benefits-list">
            {
                tier.benefits.map((benefit) => (
                    <li>
                        <span class="check-icon" style={`color: ${tier.color}`}>
                            ✓
                        </span>
                        {benefit}
                    </li>
                ))
            }
        </ul>
    </div>

    <div class="card-footer">
        <a
            href={`/contact?subject=Membership Enquiry - ${tier.name}`}
            class="btn-select"
            style={`border-color: ${tier.color}; color: ${tier.color}`}
        >
            Select Plan
        </a>
    </div>
</div>

<style>
    .membership-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border-radius: var(--radius-lg);
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        height: 100%;
        position: relative;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .membership-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .popular-badge {
        position: absolute;
        top: -12px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--color-accent);
        color: var(--color-bg);
        padding: 0.25rem 1rem;
        border-radius: var(--radius-full);
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        white-space: nowrap;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .card-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .tier-name {
        font-size: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }

    .price-container {
        display: flex;
        justify-content: center;
        align-items: baseline;
        margin-bottom: 1rem;
    }

    .currency {
        font-size: 1.5rem;
        font-weight: 300;
        margin-right: 2px;
    }

    .amount {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1;
        font-family: var(--font-heading);
    }

    .period {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.5);
        margin-left: 4px;
    }

    .description {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.5;
    }

    .card-body {
        flex: 1;
        margin-bottom: 2.5rem;
    }

    .benefits-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .benefits-list li {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1rem;
        font-size: 0.95rem;
        line-height: 1.4;
        color: rgba(255, 255, 255, 0.85);
    }

    .check-icon {
        margin-right: 0.75rem;
        font-weight: bold;
    }

    .card-footer {
        margin-top: auto;
    }

    .btn-select {
        display: block;
        text-align: center;
        width: 100%;
        padding: 1rem;
        border: 1px solid; /* Color set inline */
        border-radius: var(--radius-md);
        text-decoration: none;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.1em;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-select:hover {
        background: rgba(255, 255, 255, 0.1);
    }
</style>
