---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
    <div class="container">
        <div class="footer-grid">
            <!-- Brand & About -->
            <div class="footer-col brand-col">
                <a href="/" class="footer-logo">THE SALON</a>
                <p class="footer-desc">
                    Experience luxury hair and beauty treatments in the heart of
                    London. Dedicated to your wellness and style since 2010.
                </p>
                <div class="social-links">
                    <a href="#" aria-label="Instagram">Instagram</a>
                    <a href="#" aria-label="Facebook">Facebook</a>
                    <a href="#" aria-label="TikTok">TikTok</a>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="footer-col">
                <h3>Menu</h3>
                <ul class="footer-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="/treatments">Treatments</a></li>
                    <li><a href="/memberships">Memberships</a></li>
                    <li><a href="/consultation">AI Skin Analysis</a></li>
                    <li><a href="/gallery">Portfolio</a></li>
                    <li><a href="/results">Results Gallery</a></li>
                    <li><a href="/book">Book Now</a></li>
                </ul>
            </div>

            <!-- Legal -->
            <div class="footer-col">
                <h3>Legal</h3>
                <ul class="footer-links">
                    <li><a href="/legal/terms">Terms & Conditions</a></li>
                    <li><a href="/legal/privacy">Privacy Policy (GDPR)</a></li>
                    <li><a href="/legal/cookies">Cookie Policy</a></li>
                    <li><a href="/legal/accessibility">Accessibility</a></li>
                </ul>
            </div>

            <!-- Contact -->
            <div class="footer-col">
                <h3>Contact</h3>
                <ul class="contact-info">
                    <li>
                        <strong>Address:</strong><br />
                        123 Oxford Street<br />
                        London, W1D 1LP<br />
                        United Kingdom
                    </li>
                    <li>
                        <strong>Phone:</strong><br />
                        <a href="tel:+442071234567">+44 20 7123 4567</a>
                    </li>
                    <li>
                        <strong>Email:</strong><br />
                        <a href="mailto:hello@thesalon.london"
                            >hello@thesalon.london</a
                        >
                    </li>
                </ul>
            </div>
        </div>

        <div class="footer-bottom">
            <p>
                &copy; {currentYear} The Salon. All rights reserved. |
                <a
                    href="https://empowerdigitalsolutions.co.uk"
                    target="_blank"
                    rel="noopener noreferrer"
                    style="color: rgba(255, 255, 255, 0.4); text-decoration: none; transition: color 0.3s ease;"
                    onmouseover="this.style.color='var(--color-gold)'"
                    onmouseout="this.style.color='rgba(255, 255, 255, 0.4)'"
                >
                    Designed by Empower Digital Solutions
                </a>
            </p>
            <div class="admin-link">
                <a href="/admin">Staff Login</a>
            </div>
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background: #0a0a0a;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding: 6rem 0 2rem;
        margin-top: 4rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1fr;
        gap: 4rem;
        margin-bottom: 4rem;
    }

    .footer-logo {
        font-family: "Playfair Display", serif;
        font-size: 2rem;
        color: white;
        text-decoration: none;
        letter-spacing: 0.1em;
        display: block;
        margin-bottom: 1.5rem;
    }

    .footer-desc {
        font-size: 0.9375rem;
        line-height: 1.7;
        margin-bottom: 2rem;
        max-width: 300px;
    }

    .social-links {
        display: flex;
        gap: 1.5rem;
    }

    .social-links a {
        color: white;
        text-decoration: none;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: color 0.3s ease;
    }

    .social-links a:hover {
        color: var(--color-accent, #d4af37);
    }

    h3 {
        color: white;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
        font-weight: 500;
    }

    .footer-links,
    .contact-info {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .footer-links a,
    .contact-info a {
        color: inherit;
        text-decoration: none;
        transition: color 0.3s ease;
        font-size: 0.9375rem;
    }

    .footer-links a:hover,
    .contact-info a:hover {
        color: var(--color-accent, #d4af37);
    }

    .contact-info li {
        font-size: 0.9375rem;
        line-height: 1.6;
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        font-size: 0.8125rem;
    }

    .admin-link a {
        color: rgba(255, 255, 255, 0.3);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .admin-link a:hover {
        color: white;
    }

    @media (max-width: 1024px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
        }
    }

    @media (max-width: 640px) {
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .footer-bottom {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }
    }
</style>
