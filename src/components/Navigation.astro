<script>
    const toggle = document.querySelector(".mobile-toggle");
    const menu = document.querySelector(".mobile-menu");
    const navbar = document.querySelector(".navbar");
    const body = document.body;

    if (toggle && menu && navbar) {
        toggle.addEventListener("click", () => {
            toggle.classList.toggle("is-active");
            menu.classList.toggle("is-active");
            navbar.classList.toggle("menu-open");
            body.style.overflow = menu.classList.contains("is-active")
                ? "hidden"
                : "";
        });

        // Close on link click
        menu.querySelectorAll("a").forEach((link) => {
            link.addEventListener("click", () => {
                toggle.classList.remove("is-active");
                menu.classList.remove("is-active");
                navbar.classList.remove("menu-open");
                body.style.overflow = "";
            });
        });
    }
</script>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background: rgba(10, 10, 10, 0.8);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        padding: 1rem 0;
        transition: all 0.3s ease;
    }

    .nav-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
        z-index: 1002;
    }

    .nav-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .logo {
        font-size: 1.5rem;
        font-weight: 600;
        letter-spacing: 0.05em;
        color: var(--color-accent);
        position: relative;
        z-index: 1002;
    }

    /* Desktop Styles */
    .nav-links.desktop-only {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .nav-links a {
        font-size: 0.9rem;
        font-weight: 500;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        opacity: 0.8;
        transition:
            opacity 0.2s,
            color 0.2s;
    }

    .nav-links a:hover {
        opacity: 1;
        color: var(--color-accent);
    }

    .ai-link {
        background: linear-gradient(
            135deg,
            rgba(212, 175, 55, 0.1),
            rgba(212, 175, 55, 0.05)
        );
        padding: 0.5rem 1rem !important;
        border-radius: var(--radius-full);
        border: 1px solid rgba(212, 175, 55, 0.3);
        opacity: 1 !important;
        transition: all 0.3s ease;
    }

    .ai-link:hover {
        background: linear-gradient(
            135deg,
            rgba(212, 175, 55, 0.2),
            rgba(212, 175, 55, 0.1)
        );
        border-color: var(--color-accent);
        transform: translateY(-2px);
    }

    .admin-link {
        font-size: 0.75rem !important;
        opacity: 0.5 !important;
    }

    /* Hamburger Button */
    .mobile-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        padding: 10px;
        z-index: 1002;
    }

    .hamburger-box {
        width: 24px;
        height: 24px;
        display: inline-block;
        position: relative;
    }

    .hamburger-inner {
        display: block;
        top: 50%;
        margin-top: -2px;
        width: 100%;
        height: 2px;
        background-color: white;
        border-radius: 4px;
        position: absolute;
        transition-property: transform;
        transition-duration: 0.15s;
        transition-timing-function: ease;
    }

    .hamburger-inner::before,
    .hamburger-inner::after {
        width: 100%;
        height: 2px;
        background-color: white;
        border-radius: 4px;
        position: absolute;
        transition-property: transform;
        transition-duration: 0.15s;
        transition-timing-function: ease;
        content: "";
        display: block;
    }

    .hamburger-inner::before {
        top: -8px;
    }
    .hamburger-inner::after {
        bottom: -8px;
    }

    /* Active Hamburger */
    .mobile-toggle.is-active .hamburger-inner {
        transform: rotate(45deg);
    }
    .mobile-toggle.is-active .hamburger-inner::before {
        top: 0;
        opacity: 0;
    }
    .mobile-toggle.is-active .hamburger-inner::after {
        bottom: 0;
        transform: rotate(-90deg);
    }

    /* Mobile Menu Overlay */
    .mobile-menu {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: #0a0a0a;
        z-index: 1001;
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
        padding-top: 4rem;
    }

    .mobile-menu.is-active {
        opacity: 1;
        pointer-events: all;
    }

    .mobile-links {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        text-align: center;
        width: 100%;
        max-width: 300px;
    }

    .mobile-links a {
        font-size: 1.5rem;
        font-weight: 300;
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-decoration: none;
        transition: color 0.2s;
    }

    .mobile-links a:hover {
        color: var(--color-accent);
    }

    .ai-link-mobile {
        color: var(--color-accent) !important;
        font-weight: 600 !important;
    }

    .admin-link-mobile {
        margin-top: 2rem;
        font-size: 0.9rem !important;
        opacity: 0.5;
    }

    .mobile-book-btn {
        margin-top: 1rem;
        font-size: 1.1rem !important;
        padding: 1rem !important;
    }

    /* Responsive */
    @media (max-width: 900px) {
        .admin-link,
        .nav-links.desktop-only,
        .btn.desktop-only {
            display: none;
        }
        .mobile-toggle {
            display: block;
        }
    }
</style>
