---
import "../styles/global.css";
import "../styles/animations.css";
import "../styles/enhancements.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="fade">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="The Salon - Premium Beauty & Wellness Services"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | The Salon</title>
	</head>
	<body>
		<Navigation />
		<slot />
		<Footer />

		<!-- GSAP Scroll Animations -->
		<script>
			import {
				initScrollAnimations,
				killScrollTriggers,
			} from "../scripts/animations.ts";

			// Initialize animations on initial load and after view transitions
			document.addEventListener("astro:page-load", () => {
				// Small delay to ensure DOM is ready and layout is stable
				setTimeout(() => {
					initScrollAnimations();
				}, 100);
			});

			// Cleanup before navigation to prevent memory leaks/conflicts
			document.addEventListener("astro:before-swap", () => {
				killScrollTriggers();
			});
		</script>
	</body>
</html>
